{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for making web apps",
  "main": "index.js",
  "scripts": {
    "precommit": "npm run test && pretty-quick",
    "dev": "parcel ./src/index.html -d build/",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuncanWalter/boilerplate.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DuncanWalter/boilerplate/issues"
  },
  "homepage": "https://github.com/DuncanWalter/boilerplate#readme",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(\\.|/)test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  }
}
